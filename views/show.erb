<%
	#Prepare the pass-in parameters here
	settings=Yajl::load(data[:settings]);
	puts settings
%>

		<div class="tenantOpt">
			<ul id="optTab" class="nav nav-tabs">
				<li><a href="#tenantInfo" data-toggle="tab">Project Info</a></li>
				<li><a href="#quota" data-toggle="tab">Quota</a></li>
			</ul>
			
			<div class="tab-content">
				<div class="tab-pane" id="tenantInfo">
					<label>Tenant Name</label>
					<input type="text" value="<%=data[:project]%>" placeholder="Put the project name here.">
					
					<label>Description</label>
					<input type="text" value="<%=data[:description]%>" placeholder="Put the project description here.">
					
					<label>Email</label>
					<input type="text" value="<%=data[:email]%>" placeholder="Put your valid email address here.">
				</div>
				<div class="tab-pane" id="quota">
					<label>Metadata Items</label>
					<input type="text" value="<%=settings["metadata_items"]%>">
					
					<label>VCPUs</label>
					<input type="text" value="<%=settings["cores"]%>">
					
					<label>Instances</label>
					<input type="text" value="<%=settings["instances"]%>">
					
					<label>Injected Files</label>
					<input type="text" value="<%=settings["injected_files"]%>">
					
					<label>Injected Files Content Bytes</label>
					<input type="text" value="<%=settings["injected_file_content_bytes"]%>">
					
					<label>Volumes</label>
					<input type="text" value="<%=settings["volumes"]%>">
					
					<label>Gigabytes</label>
					<input type="text" value="<%=settings["gigabytes"]%>">
					
					<label>RAM(MB)</label>
					<input type="text" value="<%=settings["ram"]%>">
					
					<label>Floating IPs</label>
					<input type="text" value="<%=settings["floating_ips"]%>">
					
					<label>Fixed IPs</label>
					<input type="text" value="<%=settings["fixed_ips"]%>">
					
					<label>Security Groups</label>
					<input type="text" value="<%=settings["security_groups"]%>">
					
					<label>Security Group Rules</label>
					<input type="text" value="<%=settings["security_group_rules"]%>">
				</div>
			</div>
			
			<div class="optExplaination" id="optExplaination">
					
			</div>
			
			<div class="clear"></div>
						
		</div>

		<script type="text/javascript">

(function(){

	$(document).ready(init);

	function init(){
		initFields();
		initOptTab();
	}
	
	function initFields(){
		var readonly = 0;
		if(readonly){
			$('.tab-content input').attr('readonly', true);
			$('.tab-content textarea').attr('readonly', true);
			$('.tab-content select').attr('disabled', true);
		}else{
			//do nothing
		}
	}
	
	function initOptTab(){
		$('#optTab a:first').tab('show');
	}

})();
	</script>